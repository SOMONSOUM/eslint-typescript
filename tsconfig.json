{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Controllers/*": ["./src/Controllers/*"],
      "@Models/*": ["./src/Models/*"],
      "@Views/*": ["./src/Views/*"],
      "@config/*": ["./src/config/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
